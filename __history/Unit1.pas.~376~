begin
//   ShowMessage(fValueObjects.ID);
end;

procedure TForm1.ClickPanel(Sender: TObject);
begin
   if TComponent(Sender).Tag = 20 then
      TComponent(Sender).Tag := SEM_TAG
   else
      TComponent(Sender).Tag := TAG_EXCLUSAO;
end;

