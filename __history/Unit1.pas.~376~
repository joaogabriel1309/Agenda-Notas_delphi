procedure TForm1.AdicionaCaracterPanel(const Caracter: String);
var
  I         :Integer;
  componete :TComponent;
  teste     :TPanel;
begin
   for I := 1 to ComponentCount - 1 do
   begin
      if (Components[I].Tag = Contador - 1) then
         teste.Assign(Components[I]);
   end;
end;

